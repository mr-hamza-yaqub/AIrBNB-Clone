<% layout("/layouts/boilerplate") %> <br />

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3>Signup for Wanderlust</h3>
    <br />
    <form action="/signup" method="post" novalidate class="needs-validation">
      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter Username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username Already Exist</div>
      </div>
      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter email"
          class="form-control"
          required
        />
      </div>
      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success add">SignUp</button>
    </form>
  </div>
</div>
